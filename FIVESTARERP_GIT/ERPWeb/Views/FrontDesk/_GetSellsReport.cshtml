@model IEnumerable<ERPBO.FrontDesk.ViewModels.InvoiceInfoViewModel>
@{
    int sl = 0;
}
<div class="col-md-12">
    <table class="table table-bordered table-sm table-striped" id="tblPartsUsed">
        <thead class="btn-dark">
            <tr class="text-center">
                <th>SL No.</th>
                <th>InvoiceCode</th>
                <th >CustomerName</th>
                <th>Amount</th>
                <th>EntryDate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var part in Model)
            {
                sl = sl + 1;
                string entryDate = part.EntryDate != null ? part.EntryDate.Value.ToString("dd-MMM-yyy") : "";
                <tr>
                    <td class="text-center" width="10%">@sl</td>
                    <td>@part.InvoiceCode</td>
                    <td >@part.CustomerName</td>
                    <td class="text-center">@part.NetAmount.ToString("0.00 Tk")</td>
                    <td >@entryDate</td>
                </tr>
            }
            @if (Model.Count() == 0)
            {
                <tr class="text-center empty-row">
                    <td colspan="5">
                        No Rows Found
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

