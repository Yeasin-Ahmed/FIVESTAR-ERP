@model  IEnumerable<ERPBO.FrontDesk.ViewModels.JobOrderViewModel>
@{
    var pagerData = (ERPWeb.Infrastructure.PagerData)ViewBag.PagerData;
    int sl = pagerData.Serial;
    string isWarrantyAvailable = string.Empty;
    string isWarrantyPaperEnclosed = string.Empty;
    string badge = string.Empty;
}
<table class="table table-bordered table-sm table-striped table-responsive-lg text-sm" id="tblJobOrderList">
    <thead class="btn-dark">
        <tr class="text-center">
            <th class="hide"></th>
            <th style="vertical-align:middle">#SL</th>
            <th style="vertical-align:middle">JobOrder Code</th>
            <th style="vertical-align:middle">IMEI1</th>
            <th style="vertical-align:middle">IMEI2</th>
            <th style="vertical-align:middle">Customer Name</th>
            <th style="vertical-align:middle">Mobile No</th>
            <th style="vertical-align:middle">Address</th>
            <th style="vertical-align:middle">Type</th>
            <th style="vertical-align:middle">Model Name</th>
            <th style="vertical-align:middle">Model Color</th>
            <th style="vertical-align:middle">Accessories</th>
            <th style="vertical-align:middle">Symptoms</th>
            <th style="vertical-align:middle">JobOrderType</th>
            <th style="vertical-align:middle">Warrenty Paper Enclosed</th>
            <th style="vertical-align:middle">WarrantyStartDate</th>
            <th style="vertical-align:middle">StateStatus</th>
            <th style="vertical-align:middle">Remarks</th>
            <th style="vertical-align:middle">Ref.Number</th>
            <th style="vertical-align:middle">Issued by</th>
            <th style="vertical-align:middle">JobCreateDate</th>
            <th style="vertical-align:middle">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            badge = item.StateStatus == "Pending-JobOrder" ? "badge bg-warning" : (item.StateStatus == "Customer-Approved" ? "badge bg-success" : item.StateStatus == "Customer-Disapproved" ? "badge bg-danger" : (item.StateStatus == "TS-Assigned" ? "badge bg-secondary" : "badge bg-primary"));
            sl = sl + 1;
            isWarrantyAvailable = item.IsWarrantyAvailable ? "Yes" : "No";
            isWarrantyPaperEnclosed = item.IsWarrantyPaperEnclosed ? "Yes" : "No";
            string strWarrentStartDate = item.WarrantyDate.HasValue ? item.WarrantyDate.Value.ToString("dd-MMM-yyy") : "";
            string strWarrentEndDate = item.WarrantyEndDate != null ? item.WarrantyEndDate.Value.ToString("dd-MMM-yyy") : "";
        <tr>
            <td class="hide">@item.JodOrderId</td>
            <td class="text-center text-bold">@sl</td>
            <td class="text-center text-bold">@item.JobOrderCode</td>
            <td>@item.IMEI</td>
            <td>@item.IMEI2</td>
            <td>@item.CustomerName</td>
            <td>@item.MobileNo</td>
            <td>@item.Address</td>
            <td>@item.Type</td>
            <td>@item.ModelName</td>
            <td>@item.ModelColor</td>
            <td>@item.AccessoriesNames</td>
            <td>@item.Problems</td>
            <td>@item.JobOrderType</td>
            <td class="text-center">@isWarrantyPaperEnclosed</td>
            <td>@strWarrentStartDate</td>
            <td class="text-center" data-val="@item.StateStatus">
                <span class="@badge">@item.StateStatus</span>
            </td>
            <td>@item.Remarks</td>
            <td>@item.ReferenceNumber</td>
            <td class="text-center text-bold">@item.EntryUser</td>
            <td>@item.EntryDate.Value.ToString("dd-MMM-yyyy")</td>
            <td class="text-center">
                <a href="#" class="btn btn-sm btn-info data-item-details" data-item-details="@item.JodOrderId" title="View Job Order">
                    <i class="fas fa-eye"></i>
                </a>
                <a href="@Url.Action("CreateJobOrder","FrontDesk",new {@jobOrderId=item.JodOrderId })" class="btn btn-sm btn-outline-success" title="Edit"><i class="fas fa-edit"></i> </a>
                @*@if (item.StateStatus == ERPBLL.Common.JobOrderStatus.CustomerApproved || item.StateStatus == ERPBLL.Common.JobOrderStatus.AssignToTS)
            {
                <a href="#" class="btn btn-sm btn-danger data-item-assignTS hide" data-item-assignTS="@item.JodOrderId" title="Assign T.S.">
                    <i class="fas fa-user"></i>
                </a>
            }*@
            </td>
        </tr>
        }
        @if (Model.Count() == 0)
        {
            <tr class="empty-row text-center">
                <td colspan="15">No data found in the table</td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("_Pagination", pagerData)
