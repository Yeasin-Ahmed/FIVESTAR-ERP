@using ERPBO.Configuration.ViewModels;
@{
    ViewBag.Title = "T.S Services Details";
    int sl = 0;
    var jobOrder = (ERPBO.FrontDesk.ViewModels.JobOrderViewModel)ViewBag.JobOrder;
    var repair = (ERPBO.FrontDesk.ViewModels.JobOrderRepairViewModel)ViewBag.jobrepair;
    IEnumerable<ERPBO.FrontDesk.ViewModels.JobOrderProblemViewModel> Problems = (IEnumerable<ERPBO.FrontDesk.ViewModels.JobOrderProblemViewModel>)ViewBag.Problem;
    IEnumerable<ERPBO.FrontDesk.ViewModels.JobOrderFaultViewModel> Faulty = (IEnumerable<ERPBO.FrontDesk.ViewModels.JobOrderFaultViewModel>)ViewBag.faulty;
    IEnumerable<ERPBO.FrontDesk.ViewModels.JobOrderServiceViewModel> services = (IEnumerable<ERPBO.FrontDesk.ViewModels.JobOrderServiceViewModel>)ViewBag.services;
    IEnumerable<ERPBO.FrontDesk.ViewModels.JobOrderRepairViewModel> Repair = (IEnumerable<ERPBO.FrontDesk.ViewModels.JobOrderRepairViewModel>)ViewBag.repair;
    IEnumerable<ERPBO.Configuration.ViewModels.MobilePartStockInfoViewModel> WareStock = (IEnumerable<ERPBO.Configuration.ViewModels.MobilePartStockInfoViewModel>)ViewBag.warehouseStock;
    IEnumerable<ERPBO.FrontDesk.ViewModels.SparePartsAvailableAndReqQtyViewModel> availableQty = (IEnumerable<ERPBO.FrontDesk.ViewModels.SparePartsAvailableAndReqQtyViewModel>)ViewBag.SparePartsAvailableAndReqQty;
    string faulty = string.Empty;
    string service = string.Empty;
   // string repair = string.Empty;
    string problem = string.Empty;
}
<div class="row" style="overflow-y:scroll">
    <div class="col-md-6">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Id" id="hdfJobOrderId" value="@jobOrder.JodOrderId" />
        <div class="row">
            <div class="col-md-1">
                <a href="/FrontDesk/GetJobOrdersTS" class="btn btn-sm btn-outline-primary" title="Back To List"><i class="fas fa-arrow-alt-circle-left"></i></a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 text-center">
                <h5>Job Order No: <b style="color:darkblue">@jobOrder.JobOrderCode</b></h5>
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-4">
                <h6>Create Date: <b>@jobOrder.EntryDate.Value.ToString("dd-MMM-yyyy")</b></h6>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <h5><b>Customer Details</b></h5>
            </div>
            <div class="col-md-12">
                <table class="table table-bordered table-striped table-sm table-responsive-lg">
                    <tbody style="background-color:antiquewhite">
                        <tr>
                            <td>Name: <b>@jobOrder.CustomerName</b></td>
                            <td>Address: <b>@jobOrder.Address</b></td>
                            <td>MobileNo: <b>@jobOrder.MobileNo</b></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-4">
                <h5><b>Handset Details</b></h5>
            </div>
            <div class="col-md-12">
                <table class="table table-bordered table-striped table-sm table-responsive-lg">
                    <tbody style="background-color: darkgrey">
                        <tr>
                            <td>IMEI1: <b>@jobOrder.IMEI</b></td>
                            <td>IMEI2: <b>@jobOrder.IMEI2</b></td>
                            <td>Type: <b>@jobOrder.Type</b></td>
                            <td>ModelName: <b>@jobOrder.ModelName</b></td>
                            <td>Color: <b>@jobOrder.ModelColor</b></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-striped table-sm table-responsive-lg">
                    <tbody>
                        <tr>
                            <td>
                                <b>F.DeskRemarks:</b> @jobOrder.Remarks
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-md-11">
                <table class="table table-bordered table-striped table-sm table-responsive-lg">
                    <tbody>
                        <tr>
                            <td>
                                <b>Symptom:</b> 
                                @foreach (var item in Problems)
                                {
                                    problem += item.ProblemName + ",";
                                }
                                @{
                                    if (Problems.Count() > 0)
                                    {
                                        problem = problem.Substring(0, problem.Length - 1);
                                    }

                                }
                                @problem
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-1">
                <button type="button" id="btnSymptom" class="btn btn-sm btn-primary" title="Add New Symptom"><i class="fas fa-plus"> </i> </button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-11">
                <table class="table table-bordered table-striped table-sm table-responsive-lg">
                    <tbody>
                        <tr>
