                                <b>Fault:</b> 
                                @foreach (var item in Faulty)
                                {
                                    faulty += item.FaultName + ",";
                                }
                                @{
                                    if (Faulty.Count() > 0)
                                    {
                                        faulty = faulty.Substring(0, faulty.Length - 1);
                                    }

                                }
                                @faulty
