@model IEnumerable< ERPBO.FrontDesk.ViewModels.TSStockByRequsitionViewModel>
    @{ 
        int sl = 0;
        Layout = null;
    }

<table class="table table-bordered table-striped table-sm table-responsive-lg" id="tblStockByRequsition">
    <thead class="thead-dark">
        <tr class="text-center">
            <th>#SL</th>
            <th class="hide"></th>
            <th>RequsitionCode</th>
            <th class="hide"></th>
            <th>Parts Name</th>
            <th>Qty.</th>
            <th>Used Qty.</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            sl = sl + 1;
        <tr>
            <td class="text-center">@sl</td>
            <td class="hide">@item.RequsitionInfoForJobOrderId</td>
            <td>@item.RequsitionCode</td>
            <td class="hide">@item.PartsId</td>
            <td>@item.MobilePartName</td>
            <td class="text-center">@item.Quantity</td>
            <td class="text-center" style="width:20%">
                <input type="number" value=0 class="form-control form-control-sm" />
            </td>
        </tr>
        }
    </tbody>
</table>
