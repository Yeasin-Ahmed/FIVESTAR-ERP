<div class="modal fade" id="modalTsStockReturn" role="dialog" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header alert-primary">
                <h4 id="modalHeading" class="modal-title"><span id="spanModalHead">Return Stock</span></h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>
            <input type="hidden" name="Id" id="hdfReturnInfoId"/>
            <div class="modal-body" id="dataContainer1">

            </div>
            <div class="modal-footer btn-light">
                <div class="col-md-6">
                    <div id="msg1" class="alert alert-success hide float-left">
                        Data has been saved Successful!
                    </div>
                    <div id="msg2" class="alert alert-danger hide float-left">
                        Data has been failed to save!
                    </div>
                </div>
                <button type="button" class="btn btn-danger float-right" data-dismiss="modal" data-target="#"><i class="fas fa-times"></i> Cancel </button>
                <button type="submit" class="btn btn-success float-right" id="btnReturnStock"> <span id="spanSaveText">StockIn </span> </button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">

        var hdfReturnInfoId = $("#hdfReturnInfoId");

        function OpenPartsReturnModal() {
            $("#modalTsStockReturn").modal("show");
            //$(".error").addClass("hide");
        }

        $(document).on('click', '.btnPartsReturn', function (e) {
            e.preventDefault();
            OpenPartsReturnModal();
            hdfReturnInfoId.val('0');

            var id = TryParseInt($(this).attr("data-item-val"));
            hdfReturnInfoId.val(id);
            var data = { id: id };
            $.when(getReqWithData(dataType.html, type.get, '/User/ReturnStockDetails', data)).then(function (res, status) {
                if (status == "success") {
                    $("#dataContainer1").empty();
                    $("#dataContainer1").append(res);
                }
            }).fail(function (error) {
                console.log(error);
            })
        })
    </script>
    }
