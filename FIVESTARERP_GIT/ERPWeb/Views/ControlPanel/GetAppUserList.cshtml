@model IEnumerable<ERPBO.ControlPanel.ViewModels.AppUserViewModel>
@{
    ViewBag.Title = "GetAppUserList";
    int sl = 0;
    string badge = string.Empty;
    string badge1 = string.Empty;
}

<div class="row">
    <div class="col-md-12 text-center">
        <h4><b style="color:darkblue">List Of User</b></h4>
        <hr />
    </div>
    <div class="col-md-12 mb-2">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-4">
                <input type="text" name="search" id="searchBy" class="form-control form-control-sm" placeholder="Search By Anything" onkeyup="tableFilter('#tblAppUserData tbody tr',this)" />
            </div>
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <button class="btn btn-primary btn-sm float-lg-right" style="background-color:darkblue" id="btnAddNew"><i class="fa fa-plus"></i> Create New User</button>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <table class="table table-bordered table-sm table-striped table-responsive-lg" id="tblAppUserData">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th>SL</th>
                    <th class="hide">UserId</th>
                    <th>EmployeeId</th>
                    <th>FullName</th>
                    <th>MobileNo</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>Desigation</th>
                    <th>UserName</th>
                    <th>Password</th>
                    <th>ConPassword</th>
                    <th>StateStatus</th>
                    <th>RoleStatus</th>
                    <th class="hide"></th>
                    <th>Organization</th>
                    <th class="hide"></th>
                    <th>Branch</th>
                    <th class="hide"></th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    sl += 1;
                    badge = (user.StateStatus == "Active" ? "badge bg-success" : "badge bg-danger");
                    badge1 = (user.StateStatusRole == "Active" ? "badge1 bg-success" : "badge1 bg-danger");
                <tr>
                    <td class="text-center">
                        @sl
                    </td>
                    <td class="hide">@user.UserId</td>
                    <td>@user.EmployeeId</td>
                    <td>@user.FullName</td>
                    <td>@user.MobileNo</td>
                    <td>@user.Address</td>
                    <td>@user.Email</td>
                    <td>@user.Desigation</td>
                    <td>@user.UserName</td>
                    <td>@user.Password</td>
                    <td>@user.ConfirmPassword</td>
                    <td class="text-center" data-val="@user.StateStatus">
                        <span class="@badge">@user.StateStatus</span>
                    </td>
                    <td class="text-center" data-val="@user.StateStatusRole">
                        <span class="@badge1">@user.StateStatusRole</span>
                    </td>
                    <td class="hide">@user.OrganizationId</td>
                    <td>@user.OrganizationName</td>
                    <td class="hide">@user.BranchId</td>
                    <td>@user.BranchName</td>
                    <td class="hide">@user.RoleId</td>
                    <td>@user.RoleName</td>
                    <td class="text-center">
                        <a href="#" class="btn btn-sm btn-warning data-edit-item" data-edit-item="@user.UserId"><i class="fa fa-pen"></i> Edit</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modalAppUser" role="dialog" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header alert-primary">
                <h4 id="modalHeading" class="modal-title">Add New User</h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <form id="frmItem">
                    <input type="hidden" name="Id" id="hdfUserId" />
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="txtEmployeeId" class="control-label font-weight-bold">EmployeeId</label>
                            <input type="text" name="itemName" value="" id="txtEmployeeId" class="form-control form-control-sm" />
                            <span class="error hide required-employeeId font-weight-bold">Input EmployeeId!</span>
                            <span class="error hide duplicate-employeeId font-weight-bold">Already EmployeeId Exist!</span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="txtFullName" class="control-label font-weight-bold">FullName</label>
                            <input type="text" name="itemName" value="" id="txtFullName" class="form-control form-control-sm" />
                            <span class="error hide required-fullName font-weight-bold">Input Full Name!</span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="txtMobileNo" class="control-label font-weight-bold">MobileNo</label>
                            <input type="text" name="itemName" value="" id="txtMobileNo" class="form-control form-control-sm" />
                        </div>
                        <div class="form-group col-md-6">
                            <label for="txtAddress" class="control-label font-weight-bold">Address</label>
                            <input type="text" name="itemName" value="" id="txtAddress" class="form-control form-control-sm" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="txtEmail" class="control-label font-weight-bold">Email</label>
                            <input type="email" name="itemName" value="" id="txtEmail" class="form-control form-control-sm" />
                        </div>
                        <div class="form-group col-md-6">
                            <label for="txtDesignation" class="control-label font-weight-bold">Designation</label>
                            <input type="text" name="itemName" value="" id="txtDesignation" class="form-control form-control-sm" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="txtUserName" class="control-label font-weight-bold">UserName</label>
                            <input type="text" name="itemName" value="" id="txtUserName" class="form-control form-control-sm" />
                            <span class="error hide required-userName font-weight-bold">Input User Name!</span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="txtPassword" class="control-label font-weight-bold">Password</label>
                            <input type="text" name="itemName" value="" id="txtPassword" class="form-control form-control-sm" />
                            <span class="error hide required-password font-weight-bold">Input Password!</span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="txtConfirmPassword" class="control-label font-weight-bold">ConfirmPassword</label>
                            <input type="text" name="itemName" value="" id="txtConfirmPassword" class="form-control form-control-sm" />
                            <span class="error hide required-confirmPassword font-weight-bold">Input Full Confirmpassword!</span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="ddlOrganizationName" class="control-label font-weight-bold">Organization</label>
                            @Html.DropDownList("ddlOrganizationName", (IEnumerable<SelectListItem>)ViewBag.ddlOrganizationName, "--Select Organization--", new { @class = "form-control form-control-sm" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="ddlRoleName" class="control-label font-weight-bold">Role</label>
                            @Html.DropDownList("ddlRoleName", (IEnumerable<SelectListItem>)ViewBag.ddlRoleName, "--Select Role--", new { @class = "form-control form-control-sm" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="ddlBranchName" class="control-label font-weight-bold">Branch</label>
                            @Html.DropDownList("ddlBranchName", (IEnumerable<SelectListItem>)ViewBag.ddlBranchName, "--Select Branch--", new { @class = "form-control form-control-sm" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="chkStatestatus" class="control-label font-weight-bold">StateStatus</label>
                            <div class="form-control form-control-sm">
                                <input type="checkbox" id="chkStatestatus" /> <b>Is Active?</b>
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="chkStatestatusRole" class="control-label font-weight-bold">RoleStatus</label>
                            <div class="form-control form-control-sm">
                                <input type="checkbox" id="chkStatestatusRole" /> <b>Is Active?</b>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer btn-light">
                <div class="col-md-6">
                    <div id="msg1" class="alert alert-success hide float-left">
                        Data has been saved Successful!
                    </div>
                    <div id="msg2" class="alert alert-danger hide float-left">
                        Data has been failed to save!
                    </div>
                </div>
                <button type="button" class="btn btn-danger float-right" data-dismiss="modal" data-target="#"><i class="fas fa-times"></i> Cancel </button>
                <button type="submit" class="btn btn-success float-right" id="btnSubmit"><i class="far fa-save"></i> Save </button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript">
        var hdfUserId = $("#hdfUserId");
        var txtEmployeeId = $("#txtEmployeeId");
        var txtFullName = $("#txtFullName");
        var txtMobileNo = $("#txtMobileNo");
        var txtAddress = $("#txtAddress");
        var txtEmail = $("#txtEmail");
        var txtDesignation = $("#txtDesignation");
        var txtUserName = $("#txtUserName");
        var txtPassword = $("#txtPassword");
        var txtConfirmPassword = $("#txtConfirmPassword");
        var ddlOrganizationName = $("#ddlOrganizationName");
        var ddlRoleName = $("#ddlRoleName");
        var ddlBranchName = $("#ddlBranchName");
        var chkStatestatus = $("#chkStatestatus");
        var chkStatestatusRole = $("#chkStatestatusRole");

        $(document).ready(function () {
            $('#tblItemData').DataTable({
                "paging": false,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": false,
                "autoWidth": false,
            });
        })

        function OpenModal() {
            $("#modalAppUser").modal("show");
            $(".error").addClass("hide");
        }

        $("#btnAddNew").click(function (e) {
            e.preventDefault();
            clearCtrl();
            OpenModal();
        })

        function validateForm() {
            $(".error").addClass("hide");
            var isValid = true;
            if ($.trim(txtEmployeeId.val()) == "") {
                $(".required-employeeId").removeClass("hide");
                isValid = false;
            }
            else {
                var id = TryParseInt(hdfUserId.val(), 0);
                if (ajaxBooleanChecker(JSON.stringify({ id: id, employeeId: txtEmployeeId.val().trim() }), '/Common/IsDuplicateEmployeeId', getToken()) == true) {
                    $(".duplicate-employeeId").removeClass("hide");
                    isValid = false;
                }
            }
            return isValid;
        }
        if ($.trim(txtFullName.val()) == "") {
            $(".required-fullName").removeClass("hide");
            isValid = false;
        }
        if ($.trim(txtPassword.val()) == "") {
            $(".required-password").removeClass("hide");
            isValid = false;
        }
        if ($.trim(txtConfirmPassword.val()) == "") {
            $(".required-confirmPassword").removeClass("hide");
            isValid = false;
        }

        //Data add
        $("#btnSubmit").click(function (e) {
            e.preventDefault();
            $(".error").addClass("hide");
            if (validateForm() == true) {
                var data = JSON.stringify({
                    UserId: TryParseInt(hdfUserId.val(), 0),
                    EmployeeId: txtEmployeeId.val(),
                    FullName: txtFullName.val(),
                    MobileNo: txtMobileNo.val(),
                    Address: txtAddress.val(),
                    Email: txtEmail.val(),
                    Desigation: txtDesignation.val(),
                    UserName: txtUserName.val(),
                    Password: txtPassword.val(),
                    ConfirmPassword: txtConfirmPassword.val(),
                    OrganizationId: TryParseInt(ddlOrganizationName.val(), 0),
                    BranchId: TryParseInt(ddlBranchName.val(), 0),
                    RoleId: TryParseInt(ddlRoleName.val(), 0),
                    IsActive: chkStatestatus.is(":checked"),
                    IsRoleActive: chkStatestatusRole.is(":checked"),
                });
                console.log(data);
                $.when(postReqWithToken(dataType.applicationJson, dataType.json, 'POST', '/ControlPanel/SaveAppUser', data, getToken())).then(function (res, status) {
                    console.log(status);
                    console.log(res);
                    if (res == true) {
                        message("#msg1", "#modalAppUser");
                    }
                    else {
                        message("#msg2");
                    }
                    enable("#btnSubmit");
                }).fail(function (err) {
                    console.log(err);
                    enable("#btnSubmit");
                });
            }

        })

        //edit
        $(document).on("click", "a.data-edit-item", function (e) {
            e.preventDefault()
            clearCtrl();
            var row = $(this).parent().parents('tr');
            var td1 = row.find('td:eq(1)').html();
            var td2 = row.find('td:eq(2)').html();
            var td3 = row.find('td:eq(3)').html();
            var td4 = row.find('td:eq(4)').html();
            var td5 = row.find('td:eq(5)').html();
            var td6 = row.find('td:eq(6)').html();
            var td7 = row.find('td:eq(7)').html();
            var td8 = row.find('td:eq(8)').html();
            var td9 = row.find('td:eq(9)').html();
            var td10 = row.find('td:eq(10)').html();
            var td11 = row.find('td:eq(11)').attr("data-val");
            var td12 = row.find('td:eq(12)').attr("data-val");
            var td13 = row.find('td:eq(13)').html();
            var td14 = row.find('td:eq(15)').html();
            var td15 = row.find('td:eq(17)').html();

            hdfUserId.val(td1);
            txtEmployeeId.val(td2);
            txtFullName.val(td3);
            txtMobileNo.val(td4);
            txtAddress.val(td5);
            txtEmail.val(td6);
            txtDesignation.val(td7);
            txtUserName.val(td8);
            txtPassword.val(td9);
            txtConfirmPassword.val(td10);
            chkStatestatus.prop("checked", false);
            if (td11 === 'Active') {
                chkStatestatus.prop("checked", true);
            }
            chkStatestatusRole.prop("checked", false);
            if (td12 === 'Active') {
                chkStatestatusRole.prop("checked", true);
            }
            ddlOrganizationName.val(td13);
            ddlBranchName.val(td14);
            ddlRoleName.val(td15);
        })
        function clearCtrl() {
            hdfUserId.val('0');
            txtEmployeeId.val('');
            txtFullName.val('');
            txtMobileNo.val('');
            txtAddress.val('');
            txtEmail.val('');
            txtDesignation.val('');
            txtUserName.val('');
            txtPassword.val('');
            txtConfirmPassword.val('');
            chkStatestatus.prop("checked", false);
            chkStatestatusRole.prop("checked", false);
            ddlOrganizationName.val('');
            ddlBranchName.val('');
            ddlRoleName.val('');

        }
        $(".data-edit-item").click(function (e) {
            e.preventDefault()
            OpenModal()
        });
    </script>
}