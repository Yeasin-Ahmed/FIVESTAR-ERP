@section scripts{
    <script type="text/javascript">

        var FileUpload = $("#FileUpload");
        $(document).ready(function () {
            loadDataInitializer();
        })

        $("#btnAddIMEI").click(function (e) {
            e.preventDefault();
            OpenModalIMEI();
        })

        function loadDataInitializer() {
            loadBTRCApprovedDataTable();
            loadItemStockDataTable();
        }

        function OpenModalIMEI() {
            $("#modalIMEI").modal("show");
        }

        function loadBTRCApprovedDataTable() {
            $("#searchByIMEI").val('');
            var data = { flag: "list" };
            $.when(getReqWithData(dataType.html, type.get, '/SalesAndDistribution/GetBTRCIMEI', data)).then(function (res, status) {
                if (status === "success") {
                    $("#dataContainer1").fadeOut('500', function () {
                        $("#dataContainer1").empty();
                        $("#dataContainer1").append(res).fadeIn('500');
                    });
                }
            }).fail(function (error) {
                consoleLog(error);
            })
        }

        function loadItemStockDataTable() {
            var data = { flag: "stock" };
            $.when(getReqWithData(dataType.html, type.get, '/SalesAndDistribution/GetBTRCIMEI', data)).then(function (res, status) {
                if (status === "success") {
                    $("#dataContainer2").fadeOut('500', function () {
                        $("#dataContainer2").empty();
                        $("#dataContainer2").append(res).fadeIn('500');
                    });
                }
            }).fail(function (error) {
                consoleLog(error);
            })
        }

        $("#btnSubmitIMEI").click(function (e) {
            e.preventDefault();
            var excelFile = $("#FileUpload").prop('files')[0];
            var formData = new FormData();
            formData.append("FileUpload", excelFile);
            console.log(formData);
            if (excelFile !=null) {
                disable("#btnSubmitIMEI");
                $.when(postReqWithFile(dataType.json, type.post, '/SalesAndDistribution/SaveBTRCApprovedIMEI', formData, getToken())).then(function (res, status) {
                    if (res.isSuccess === true && status === 'success') {
                        toastrSuccessAlert(execuStatus.successSave);
                        $("#modalIMEI").modal("toggle").toggle("fast");
                        setTimeout(function () {
                            loadBTRCApprovedDataTable();
                        }, 1500);
                    }
                    else {
                        toastrErrorAlert(execuStatus.fail);
                    }
                    enable("#btnSubmitIMEI");
                }).fail(function (error) {
                    enable("#btnSubmitIMEI");
                })
            }
            
        })

        $("#btnAddProcess").click(function (e) {
            e.preventDefault();
            bootbox.confirm("Are you sure you want to Run this Process", function (result) {
                if (result) {
                    $("#loader-process").removeClass("hide");
                    //return;
                    $.when(postReqWithToken(null, dataType.json, type.post, '/SalesAndDistribution/IMEIProcess', null, getToken())).then(function (res, status) {
                        if (status === 'success') {
                            toastr.info(res.rows + "(Rows) affected", null, { timeOut: 1500 });
                            loadItemStockDataTable();
                            loadBTRCApprovedDataTable();
                        }
                        else {
                            toastrErrorAlert(execuStatus.fail);
                        }
                        $("#loader-process").addClass("hide");
                    }).fail(function (error) {
                        toastrErrorAlert(execuStatus.fail);
                        $("#loader-process").addClass("hide");
                    })
                }
            })
        })
    </script>
}