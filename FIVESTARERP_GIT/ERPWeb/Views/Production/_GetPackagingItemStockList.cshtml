@model IEnumerable<ERPBO.Production.ViewModels.PackagingItemStockInfoViewModel>
@{
    Layout = null;
    var pagerData = (ERPWeb.Infrastructure.PagerData)ViewBag.PagerData;
    int sl = pagerData.Serial;
    string badge = string.Empty;
    var privilege = (ERPBO.Common.UserPrivilege)ViewBag.UserPrivilege;
    var qty = 0;
}

<table class="table table-bordered table-striped table-sm table-responsive-lg">
    <thead class="btn-dark">
        <tr class="text-center text-sm text-bold">
            <td>#SL</td>
            <td>Floor No</td>
            <td>Model Name</td>
            <td>Packaging Line</td>
            <td>Warehouse Name</td>
            <td>ItemType Name</td>
            <td>Item Name</td>
            <td>In-Quantity</td>
            <td>Transfer/Finish Qty.</td>
            <td>Stock Qty</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            sl = sl + 1;
            qty = (item.Quantity - item.TransferQty);
            <tr>
                <td class="text-center text-bold">@sl</td>
                <td>@item.ProductionFloorName</td>
                <td>@item.ModelName</td>
                <td>@item.PackagingLineName</td>
                <td>@item.WarehouseName</td>
                <td>@item.ItemTypeName</td>
                <td>@item.ItemName</td>
                <td class="text-center text-bold">@item.Quantity</td>
                <td class="text-center text-bold">@item.TransferQty</td>
                <td class="text-center text-bold">@qty</td>
            </tr>
        }
        @if (Model.Count() == 0)
        {
            <tr class="text-center text-bold">
                <td colspan="11">No data found in the table</td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("_Pagination", pagerData)
