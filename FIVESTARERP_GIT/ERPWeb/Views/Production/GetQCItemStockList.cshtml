@section scripts{
    <script type="text/javascript">
        var ddlLineNumber = $("#ddlLineNumber");
        var ddlQCLine = $("#ddlQCLine");
        var ddlModelName = $("#ddlModelName");
        var ddlWarehouse = $("#ddlWarehouse");
        var ddlItemType = $("#ddlItemType");
        var ddlItem = $("#ddlItem");
        var txtLessOrEq = $("#txtLessOrEq");
        var pageNo = 1;

        $(document).ready(function () {
            //Initialize Select2 Elements
            $('.select2').select2();

            //Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            });
        })

        ddlLineNumber.change(function () {
            clearDropdown("ddlQCLine");
            if (ddlLineNumber.val() != "") {
                LoadDropDown('/Common/GetQCByLine', 'POST', ddlQCLine, JSON.stringify({ lineId: ddlLineNumber.val() }));
            }
            LoadDataTable();
        })

        ddlWarehouse.change(function () {
            $("#unitName").text('');
            clearDropdown("ddlItemType");
            clearDropdown("ddlItem");
            if (ddlWarehouse.val() != "") {
                LoadDropDown('/Common/GetItemTypeForDDL', 'POST', ddlItemType, JSON.stringify({ warehouseId: ddlWarehouse.val() }));
            }
            LoadDataTable();
        })

        ddlItemType.change(function () {
            $("#unitName").text('');
            clearDropdown("ddlItem");
            if (ddlItemType.val() != "") {
                LoadDropDown('/Common/GetItemForDDL', 'POST', ddlItem, JSON.stringify({ itemTypeId: ddlItemType.val() }));
            }
            LoadDataTable();
        })

        $(document).on('change', '.ctrl-change', function () {
            LoadDataTable();
        })

        txtLessOrEq.keyup(function () {
            LoadDataTable();
        })

        function LoadDataTable() {

            //string flag,long? lineId, long? assemblyId, long? modelId, long? warehouseId, long? itemTypeId, long? itemId, string lessOrEq,int page=1
            var data = { flag: "search", floorId: ddlLineNumber.val(), qcId: ddlQCLine.val(), modelId:ddlModelName.val(), warehouseId: TryParseInt(ddlWarehouse.val(), 0), itemTypeId: TryParseInt(ddlItemType.val(), 0), itemId: TryParseInt(ddlItem.val(), 0),lessOrEq: txtLessOrEq.val(), page: pageNo };

            $.when(getReqWithData('html', 'GET', '/Production/GetQCItemStockList', data)).then(function (res, status) {
                console.log(status);
                if (status === "success") {
                    $("#dataContainer").fadeOut('500', function () {
                        $("#dataContainer").empty();
                        $("#dataContainer").append(res).fadeIn('500');
                    });
                }
            }).fail(function (error) {
                console.log(error);
            });
            pageNo = 1;
        }
        // Pagination
        $(document).on('click', 'a.page-link', function (e) {
            e.preventDefault();
            if (!$(this).hasClass('current-page')) {
                pageNo = $(this).attr('data-page-no');
                LoadDataTable();
            }
        })

        // QC Pass
        var hdfProductionFloorQP = $("#hdfProductionFloorQP");
        var hdfQCLineQP = $("#hdfQCLineQP");
        var hdfModelQP = $("#hdfModelQP");
        var hdfWarehouseQP = $("#hdfWarehouseQP");
        var hdfItemTypeQP = $("#hdfItemTypeQP");
        var hdfItemQP = $("#hdfItemQP");
        var txtQcPassQty = $("#txtQcPassQty");

        $(document).ready(function () {
            $(".cell-action").addClass('hide');
            $('.select2').select2();

            //Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            });
        })

        function clearQCPass() {
            enable("#btnSubmitQCPass");
            hdfProductionFloorQP.val('0')
            hdfQCLineQP.val('0')
            hdfModelQP.val('0')
            hdfWarehouseQP.val('0')
            hdfItemTypeQP.val('0')
            hdfItemQP.val('0')
            var tblQcPass = $('#tblQcPass tbody');
            var qcPassRows = tblQcPass.children('tr');

            var qcPassRow1 = qcPassRows.eq('0');
            var row1Cell2 = qcPassRow1.children('td').eq(1).html('');
            var row1Cell4 = qcPassRow1.children('td').eq(3).html('');

            var qcPassRow2 = qcPassRows.eq('1');
            var row2Cell2 = qcPassRow2.children('td').eq(1).html('');
        }

        $(document).on('click', 'a.data-item-qcpass', function (e) {
            e.preventDefault();
            clearQCPass();
            $("#modalQCPass").modal("show");
            var row = $(this).parent().parents('tr');
            var floor = row.children('td').eq(11).html();
            var qc = row.children('td').eq(12).html();
            var model = row.children('td').eq(13).html();
            var warehouse = row.children('td').eq(14).html();
            var itemType = row.children('td').eq(15).html();
            var item = row.children('td').eq(16).html();

            hdfProductionFloorQP.val(floor)
            hdfQCLineQP.val(qc)
            hdfModelQP.val(model)
            hdfWarehouseQP.val(warehouse)
            hdfItemTypeQP.val(itemType)
            hdfItemQP.val(item)


            var floorName = row.children('td').eq(2).html() + ' - ' + row.children('td').eq(1).html();

            var tblQcPass = $('#tblQcPass tbody');
            var qcPassRows = tblQcPass.children('tr');
            console.log('qcPassRows');
            console.log($('#tblQcPass tr').length);

            var qcPassRow1 = qcPassRows.eq('0');
            console.log(qcPassRow1);
            var row1Cell2 = qcPassRow1.children('td').eq(1).html(row.children('td').eq(2).html());
            var row1Cell4 = qcPassRow1.children('td').eq(3).html(row.children('td').eq(1).html());

            var qcPassRow2 = qcPassRows.eq('1');
            var row2Cell2 = qcPassRow2.children('td').eq(1).html(row.children('td').eq(3).html());
        })

        function validateQcPassQty() {
            var isValid = true;
            var errorText = "";
            if (TryParseInt(hdfProductionFloorQP.val(), 0) <= 0)
            {
                errorText+="Floor not found </br>"
                isValid = false;
            }
            if (TryParseInt(hdfQCLineQP.val(), 0) <= 0) {
                errorText += "QC Line not found </br>"
                isValid = false;
            }
            if (TryParseInt(hdfModelQP.val(), 0) <= 0) {
                errorText += "Model not found </br>"
                isValid = false;
            }
            if (TryParseInt(hdfWarehouseQP.val(), 0) <= 0) {
                errorText += "Warehouse not found </br>"
                isValid = false;
            }
            if (TryParseInt(hdfItemTypeQP.val(), 0) <= 0) {
                errorText += "ItemType not found </br>"
                isValid = false;
            }
            if (TryParseInt(hdfItemQP.val(), 0) <= 0) {
                errorText += "Item not found </br>"
                isValid = false;
            }
            if (TryParseInt(txtQcPassQty.val(), 0) <= 0) {
                errorText += "Quantity cannot be 0 or less than 0 </br>"
                isValid = false;
            }
            else {
                
                if (TryParseInt(hdfProductionFloorQP.val(), 0) > 0 && TryParseInt(hdfQCLineQP.val(), 0) > 0 && TryParseInt(hdfModelQP.val(), 0) > 0 && TryParseInt(hdfItemQP.val(), 0) > 0)
                {
                    var data = JSON.stringify({ floorId: hdfProductionFloorQP.val(), qcId: hdfQCLineQP.val(), modelId: hdfModelQP.val(), itemId: hdfItemQP.val() });

                    var qty = ajaxValueReturnable(data, '/Common/GetQCItemStockQtyByFloorAndQcAndModelAndItem', getToken())
                    console.log(qty);
                    if (qty != null) {
                        if (TryParseInt(txtQcPassQty.val(), 0) > qty) {
                            errorText += "Qty is exceeded </br>";
                            isValid = false;
                        }
                    }

                    var bundleData = JSON.stringify({ floorId: hdfProductionFloorQP.val(), qcLineId: hdfQCLineQP.val(), modelId: hdfModelQP.val(), itemId: hdfItemQP.val(), qty: TryParseInt(txtQcPassQty.val(), 0), type: preparationType.production });
                    var bundle = ajaxValueReturnable(bundleData, '/Common/GetItemBundleQtyChecking', getToken());
                    console.log("Bundle");
                    console.log(bundle);
                    if (!bundle.isSuccess) {
                        errorText+=bundle.text;
                        isValid = false;
                    }
                }
               
            }
            if (!isValid) {
                bootbox.alert(errorText);
            }

            return isValid;
        }

        $("#btnSubmitQCPass").click(function (e) {
            e.preventDefault();

            if (validateQcPassQty()) {

                bootbox.confirm("Are you sure you want to Pass these quantity", function (result) {
                    if (result) {
                        disable("#btnSubmitQCPass");

                        var data = JSON.stringify({ ProductionFloorId: TryParseInt(hdfProductionFloorQP.val(), 0), QCLineId: TryParseInt(hdfQCLineQP.val(), 0), DescriptionId: TryParseInt(hdfModelQP.val(), 0), WarehouseId: TryParseInt(hdfWarehouseQP.val(), 0), ItemTypeId: TryParseInt(hdfItemTypeQP.val(), 0), ItemId: TryParseInt(hdfItemQP.val(), 0), Quantity: TryParseInt(txtQcPassQty.val(), 0) });

                        console.log("QCPass Data");
                        console.log(data);
                        //return;
                        $.when(postReqWithToken(dataType.applicationJson, dataType.json, type.post, '/Production/SaveQCPassQuantity', data, getToken())).then(function (res, status)
                        {
                            console.log(res);
                            console.log(status);
                            if (res === true && status === "success") {
                                bootbox.alert("Success");
                                LoadDataTable();
                            }
                            else {
                                bootbox.alert("Fail");
                            }
                            enable("#btnSubmitQCPass");
                        }).fail(function (error) {
                            console.log(error);
                            bootbox.alert("Fail");
                            enable("#btnSubmitQCPass");
                        })
                    }
                })
            }
        })

        var ddlLineNumber2 = $("#ddlLineNumber2");
        var ddlModelName2 = $("#ddlModelName2");
        var ddlQCLine2 = $("#ddlQCLine2");
        var ddlWarehouse2 = $("#ddlWarehouse2");

        ddlLineNumber2.change(function () {
            clearDropdown("ddlQCLine2");
            if (ddlLineNumber2.val() != "") {
                LoadDropDown('/Common/GetQCByLine', 'POST', ddlQCLine2, JSON.stringify({ lineId: ddlLineNumber2.val() }));
            }
            LoadDataTable2();
        })

        ddlModelName2.change(function () {
            LoadDataTable2();
        })

        ddlQCLine2.change(function () {
            LoadDataTable2();
        })

        ddlWarehouse2.change(function () {
            LoadDataTable2();
        })

        function LoadDataTable2() {

            var data = { flag: "search", floorId: TryParseInt(ddlLineNumber2.val(), 0), qcId: TryParseInt(ddlQCLine2.val(), 0), modelId: TryParseInt(ddlModelName2.val(),0), warehouseId: TryParseInt(ddlWarehouse2.val(), 0)};

            $.when(getReqWithData('html', 'GET', '/Production/GetQCPassList', data)).then(function (res, status) {
                console.log(status);
                if (status === "success") {
                    $("#dataContainer1").fadeOut('500', function () {
                        $("#dataContainer1").empty();
                        $("#dataContainer1").append(res).fadeIn('500');
                        $(".cell-action").addClass('hide');
                    });
                }
            }).fail(function (error) {
                console.log(error);
            });
        }
        
    </script>
}