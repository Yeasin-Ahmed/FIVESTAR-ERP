@model IEnumerable<ERPBO.Production.ViewModels.RequsitionInfoViewModel>
@{
    int sl = 0;
    string badge = string.Empty;
    //Layout = null;
}
<table class="table table-bordered table-sm table-striped table-responsive-lg" id="tblReqInfoData">
    <thead class="btn-dark">
        <tr class="text-center">
            <th>SL No.</th>
            <th class="hide"></th>
            <th>Requsition Code</th>
            <th class="hide"></th>
            <th>Line Number</th>
            <th class="hide"></th>
            <th>Warehouse Name</th>
            <th>Model</th>
            <th>Total Item</th>
            <th>State Status</th>
            <th>Remarks</th>
            <th>EntryDate</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var info in Model)
        {
            sl = sl + 1;
            badge = info.StateStatus == "Pending" ? "badge bg-warning" : (info.StateStatus == "Accepted" ? "badge bg-primary" : info.StateStatus == "Approved" ? "badge bg-success" : (info.StateStatus == "Decline" ? "badge bg-danger" : "badge bg-secondary"));
            <tr>
                <td class="text-center" width="10%">@sl</td>
                <td class="hide">@info.ReqInfoId</td>
                <td>@info.ReqInfoCode</td>
                <td class="hide">@info.LineId</td>
                <td>@info.LineNumber</td>
                <td class="hide">@info.WarehouseId</td>
                <td>@info.WarehouseName</td>
                <td>@info.ModelName</td>
                <td class="text-center">@info.Qty</td>
                <td class="text-center" data-val="@info.StateStatus">
                    <span class="@badge">@info.StateStatus</span>
                </td>
                <td>@info.Remarks</td>
                <td class="text-center">@info.EntryDate.Value.ToString("dd MMM yyyy hh:mm tt")</td>
                <td class="text-center">
                    <a href="#" class="btn btn-sm btn-outline-secondary data-details" title="View Details" data-details="@info.ReqInfoId"><i class="fas fa-eye"></i></a>
                    @if (info.StateStatus == "Pending")
                    {
                        <a href="#" class="btn btn-sm btn-outline-warning  data-edit-item" data-edit-item="@info.ReqInfoId" title="Edit Req"><i class="fa fa-pen"></i></a>
                    }
                </td>
            </tr>
        }
        @if (Model.Count() == 0)
        {
            <tr class="text-center empty-row">
                <td colspan="11">
                    No data found in table
                </td>
            </tr>
        }
    </tbody>
</table>
