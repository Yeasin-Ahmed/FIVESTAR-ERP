@model IEnumerable<ERPBO.Inventory.ViewModels.ItemPreparationInfoViewModel>
@{
    int sl = 0;
    var privilege = (ERPBO.Common.UserPrivilege)ViewBag.UserPrivilege;
}

<table class="table table-bordered table-sm table-striped table-responsive-lg" id="tblItemPreparationList">
    <thead class="btn-dark">
        <tr class="text-center text-bold">
            <th>#SL</th>
            <th class="hide"></th>
            <th>Model Name</th>
            <th>Warehouse Name</th>
            <th>ItemType Name</th>
            <th>Item Name</th>
            <th>Type Of Unit</th>
            <th>Item Count</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            sl = sl + 1;
            <tr>
                <td class="text-center text-bold">@sl</td>
                <td class="hide">@item.PreparationInfoId</td>
                <td>@item.ModelName</td>
                <td>@item.WarehouseName</td>
                <td>@item.ItemTypeName</td>
                <td>@item.ItemName</td>
                <td class="text-center">@item.UnitName</td>
                <td class="text-center">@item.ItemCount</td>
                <td class="text-center">
                    @if (privilege != null && privilege.Detail)
                    {
                        <a href="#" class="btn btn-sm btn-outline-secondary data-item-detail" title="View Detail" data-item-detail="@item.PreparationInfoId">
                            <i class="fas fa-eye"></i>
                        </a>
                    }
                    @if (privilege != null && privilege.Edit)
                    {
                        <a href="#" class="btn btn-sm btn-outline-warning data-item-edit hide" title="Edit" data-edit-item="@item.PreparationInfoId">
                            <i class="fas fa-pen"></i>
                        </a>
                    }
                    @if (privilege != null && privilege.Delete)
                    {
                        <a href="#" class="btn btn-sm btn-outline-danger data-item-del" title="Delete" data-del-item="@item.PreparationInfoId">
                            <i class="fas fa-trash"></i>
                        </a>
                    }
                        
                </td>
            </tr>
        }
        @if (Model.Count() == 0)
        {
            <tr class="text-center text-bold">
                <td colspan="9">No data found in the table</td>
            </tr>
        }
    </tbody>
</table>