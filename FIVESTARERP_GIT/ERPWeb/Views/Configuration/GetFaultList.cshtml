@model IEnumerable<ERPBO.Configuration.ViewModels.FaultViewModel>
@{
    ViewBag.Title = "Fault List";
    int sl = 0;
}

<div class="row">
    <div class="col-md-12 text-center">
        <h4><b style="color:darkblue">Fault List</b></h4>
        <hr />
    </div>
    <div class="col-md-12 mb-2">
        @Html.AntiForgeryToken()
    </div>
    <div class="col-md-12">
        <table class="table table-bordered table-sm table-striped" id="tblFaultData">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th>#SL</th>
                    <th class="hide"></th>
                    <th>FaultName</th>
                    <th>Fault Code</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var f in Model)
                {
                    sl = sl + 1;
                    <tr>
                        <td class="text-center" width="10%">@sl</td>
                        <td class="hide">@f.FaultId</td>
                        <td>@f.FaultName</td>
                        <td>@f.FaultCode</td>
                    </tr>
                }
                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="5">
                            No Rows Found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>