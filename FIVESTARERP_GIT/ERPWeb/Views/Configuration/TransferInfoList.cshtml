
@{
    ViewBag.Title = "Stock Transfer B-B";
}

<div class="row">
    <div class="col-md-12 text-center">
        <div class="row">
            <div class="col-md-3">
                <a href="#" class="float-left btn btn-sm btn-outline-secondary" title="Details View">
                    <i class="fas fa-eye"></i> Go To Details Transfer
                </a>
            </div>
            <div class="col-md-6">
                <h4><b style="color:darkblue">Parts Transfer List</b></h4>
            </div>
            <div class="col-md-3">
                <a href="/Configuration/CreateStockTransfer" class="btn btn-outline-success btn-sm float-lg-right" id="btnAddNew"><i class="fa fa-plus"></i> Stock Transfer</a>
            </div>
        </div>
        <hr />
    </div>
    <div class="col-md-12 mb-2">
        @Html.AntiForgeryToken()
        <h5 class="text-cyan"><b>Search By</b></h5>
        <div class="row">
            <div class="col-md-3">
                <label for="ddlServicesWarehouse" class="control-label font-weight-bold">ServicesWarehouse Name</label>
                @Html.DropDownList("ddlServicesWarehouse", (IEnumerable<SelectListItem>)ViewBag.ddlServicesWarehouse, "--Select ServicesWarehouse--", new { @class = "form-control form-control-sm" })
            </div>
            <div class="col-md-3">
                <label for="ddlBranchName" class="control-label font-weight-bold">Branch Name</label>
                @Html.DropDownList("ddlBranchName", (IEnumerable<SelectListItem>)ViewBag.ddlBranchName, "--Select Branch--", new { @class = "form-control form-control-sm" })
            </div>
        </div>
    </div>
    <div class="col-md-12" id="dataContainer">
        @{Html.RenderAction("StockTransferInfoPartialList");}
    </div>
</div>


