@model IEnumerable<ERPBO.Configuration.ViewModels.ServiceViewModel>
@{
    ViewBag.Title = "Service List";
    int sl = 0;
}

<div class="row">
    <div class="col-md-12 text-center">
        <h4><b style="color:darkblue">Service List</b></h4>
        <hr />
    </div>
    <div class="col-md-12 mb-2">
        @Html.AntiForgeryToken()
    </div>
    <div class="col-md-12">
        <table class="table table-bordered table-sm table-striped" id="tblServiceData">
            <thead class="btn-dark">
                <tr class="text-center">
                    <th>SL No.</th>
                    <th class="hide"></th>
                    <th>ServiceName</th>
                    <th>Service Code</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                    sl = sl + 1;
                    <tr>
                        <td class="text-center" width="10%">@sl</td>
                        <td class="hide">@service.ServiceId</td>
                        <td>@service.ServiceName</td>
                        <td>@service.ServiceCode</td>
                    </tr>
                }
                @if (Model.Count() == 0)
                {
                    <tr class="text-center empty-row">
                        <td colspan="5">
                            No Rows Found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

