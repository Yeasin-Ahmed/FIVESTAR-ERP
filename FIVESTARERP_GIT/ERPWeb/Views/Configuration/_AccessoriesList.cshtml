@model IEnumerable<ERPBO.Configuration.ViewModels.AccessoriesViewModel>
@{ 
    int sl = 0;
}
<div class="col-md-12 text-sm">
    <table class="table table-bordered table-sm table-striped" id="tblAccessoriesData">
        <thead class="btn-dark">
            <tr class="text-center">
                <th>#SL</th>
                <th class="hide"></th>
                <th>AccessoriesName</th>
                <th>AccessoriesCode</th>
                <th>Remarks</th>
                <th>Entry Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var access in Model)
            {
                sl = sl + 1;
                <tr>
                    <td class="text-center" width="10%">@sl</td>
                    <td class="hide">@access.AccessoriesId</td>
                    <td>@access.AccessoriesName</td>
                    <td class="text-center">@access.AccessoriesCode</td>
                    <td class="text-center">@access.Remarks</td>
                    <td>@access.EntryDate.Value.ToString("dd-MMM-yyyy")</td>
                    <td class="text-center">
                        <a href="#" class="btn btn-outline-warning btn-sm data-edit-item" title="Edit" data-edit-item="@access.AccessoriesId"><i class="fas fa-pencil-alt"></i> </a>
                        <a href="#" class="btn btn-outline-danger btn-sm data-del-item" title="Delete" data-del-item="@access.AccessoriesId"><i class="far fa-trash-alt"></i> </a>
                    </td>
                </tr>
            }
            @if (Model.Count() == 0)
            {
                <tr class="text-center empty-row">
                    <td colspan="5">
                        No Rows Found
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
